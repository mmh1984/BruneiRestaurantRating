<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.maynard.bruneirestaurantrating.admin"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <ImageView
            android:layout_marginTop="20dp"
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/logonew"
            android:layout_gravity="center"
            />

        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/btnmembers"
            android:layout_width="wrap_content"
            android:layout_height="40dp"

            android:background="@drawable/button_members"
            android:layout_gravity="center"/>

        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/btnrestaurants"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/button_restaurants"/>
    </LinearLayout>

</RelativeLayout>
